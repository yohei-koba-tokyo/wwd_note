= form_with(model: memos, url: memos_path, local: true, class:"memo-form") do |form|
  .memo-form__inside
    - memos.collection.each do |memo|
      = fields_for "memos[]", memo do |field|
        .memo-form__inside__line
          %p.dot ・
          = field.text_field :memo, {"id"=>nil, "class"=>"memos__memo__form"}
    %p.verysmall.rightside 1メモあたり50文字以内
  = form.submit "保存する", class:"submit-btn"
  